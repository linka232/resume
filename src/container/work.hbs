{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    <main>
      {{#with main}}
        <section>
            <div>
               {{> title data="Work history" big=true}}
            </div>
            <div>
              <ul>
                {{#each work}}
                <li>
                    <div>{{position}}</div>

                    <br>

                    <div>{{duration.from}} -
                       {{#if duration.to}}
                        {{duration.to}} 
                        {{else}} 
                        (still working) 
                        {{/if}}</div>

                    <br>
                   {{#if company.url}}
                    <div>{{>link text=company.name href=company.url blank=true noLine=true}}</div>
                  {{else}}
                  <b>{{company.name}}</b>
                  {{/if}}
                    <br>

                    <div><strong>Projects ({{projectAmount}})</strong></div>

                    <br>

                    <ul>
                      {{#each projects}}
                      <li>
                        <div>{{name}}</div>
                        <div>{{>link text=name href=url blank=true noLine=true}}</div>
                        <hr>
                        <div>
                          <p>{{about}}</p>
                        </div>
                        <br>
                        <div><em>Project stacks({{stackAmount}})</em></div>
                       <ul>
                        {{#each stack}}
                        <li>{{name}}</li>
                        {{/each}}
                        </ul>
                        <br>
                        <div><em>Project awards({{awardAmount}})</em></div>
                        <ul>
                          {{#each awards}}
                          <li>{{name}}</li>
                          {{/each}}
                        </ul>
              
                      

                        
                {{/each}}
                
              {{/each}}
              </ul>
              </div>
       </section>
       {{/with}}
    </main>
</div>

