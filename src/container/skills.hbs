{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    

    
{{#with main}}
    <main>
        <section>
            {{> title data="All skills" big=true}}
            <ul>
                {{#each skills}}
                <li>
                    {{name}} ({{point}})
                    {{#if isTop}} (TOP) {{/if}}

                    {{#unless point includeZero=true}} (do not study) {{/unless}}

                    {{#unless point}}
                      {{#if point includeZero=true}}
                          (in process of study)
                      {{/if}}
                    {{/unless}}

                    </li>
                {{/each}}
            </ul>
        </section>
        <section>
          {{> title data=" My hobbies"}}
            <ul>
                {{#each hobbies}}
                <li>
                     {{name}}
                    {{#if isMain includeZero=true}} (favourite) {{/if}}
                    </li>
                {{/each}}  
        </section>
    </main>
    {{/with}}

    

</div>

